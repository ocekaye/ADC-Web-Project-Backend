{
  "name": "Account",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "required": false
    }
  },
  "properties": {
    "picture": {
      "type": "string",
      "default": ""
    },
    "phone": {
      "type": "string",
      "default": ""
    },
    "steam_url": {
      "type": "string",
      "default": ""
    }
  },
  "validations": [],
  "relations": {
    "Content": {
      "type": "hasMany",
      "model": "Content",
      "foreignKey": "accountId"
    }    
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
